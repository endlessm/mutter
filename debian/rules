#!/usr/bin/make -f

-include /usr/share/gnome-pkg-tools/1/rules/gnome-get-source.mk

export DEB_LDFLAGS_MAINT_APPEND = -Wl,-O1 -Wl,--as-needed

%:
	dh $@ --with gir,gnome

override_dh_autoreconf:
	dh_autoreconf --as-needed

ifeq ($(DEB_HOST_ARCH_OS),linux)
CONFFLAGS = --enable-native-backend

# Note that --enable-gl, --with-default-driver and --enable-kms-egl-platform
# are only understood by the in-tree version of cogl, but we need to pass them
# here so that mutter can use the HW accelerated GLES 2.0 implementation.
ifeq ($(DEB_HOST_ARCH),$(findstring $(DEB_HOST_ARCH),armhf))
CONFFLAGS += \
	--disable-wayland \
	--disable-gl \
	--enable-cogl-gles2=yes \
	--enable-gles2=yes \
	--with-default-driver=gles2
else
CONFFLAGS += \
	--enable-wayland \
	--enable-gl=yes \
	--with-default-driver=gl
endif
CONFFLAGS += --enable-kms-egl-platform=yes
else
CONFFLAGS += \
	--disable-wayland-egl-platform \
	--disable-wayland-egl-server \
	--disable-kms-egl-platform \
	--disable-wayland \
	--disable-native-backend
endif

override_dh_auto_configure:
	dh_auto_configure -- \
		--libexecdir="\$${prefix}/lib/mutter" \
		--enable-startup-notification \
		--enable-compile-warnings \
		$(CONFFLAGS)

override_dh_install:
	dh_install --list-missing

override_dh_girepository:
	dh_girepository /usr/lib/$(DEB_HOST_MULTIARCH)/mutter

override_dh_makeshlibs:
	dh_makeshlibs -V'libmutter0i (>= 3.21.0)'

override_dh_strip:
	dh_strip --dbgsym-migration='mutter-dbg (<< 3.18.3-2~)'

